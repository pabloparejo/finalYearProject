@import 'nib'

backgroundColor = #FAFAFA
greyColor = #EEE
darkGreyColor = #EAEAEA

mainColor = #5599CC
mainColorTranslucent = rgba(85, 153, 204, 0.75)
mainColorHover = #357cb2

secondaryColor = #F4ba60

alertColor = #c60f13
alertColorHover = #9e0c0f
alertColorTranslucent = rgba(198, 15, 19, 0.7)

successColor = #22AA66

bodyFontColor = #333333
headerFontColor = #333333

whiteColor = #FAFAFA



/* MIXINS */

bottom-shadow(n, blur, opac)
    box-shadow 0px (1*n)px (blur*1)px rgba(0,0,0,opac)

text-shadow(n, blur, opac)
    text-shadow 0px (1*n)px (blur*1)px rgba(0,0,0,opac)

inset-right-shadow(n, blur, opac)
    box-shadow inset (-1*n)px 0px (blur)px rgba(0,0,0,opac)


/* End MIXINS */

html
	background backgroundColor

body
	background backgroundColor
	color bodyFontColor
	font-size 15px

body.full-height
	height 100%
	max-height 100%
	overflow-y auto

.absolute
	position absolute

.background-grey
	background greyColor
.background-dark-grey
	background darkGreyColor
.background-main
	background mainColor
.background-secondary, .background-secondary-color
	background secondaryColor
.background-alert
	background alertColor
.background-success
	background successColor
.background-body-font-color
	background bodyFontColor
.background-header-font-color
	background headerFontColor
.background-white
	background whiteColor
.no-background
	background none


.button-group.no-weight
	display inline-block
	overflow hidden
	padding 0 2px
	li 
		margin 0
		float left
		
		&:first-child a.button
			border-left 1px solid
			
			&:active, &:focus
				border-left 1px solid

		a.button, & a.button:focus
			background none
			border 1px solid mainColorTranslucent
			border-left 0
			color mainColor
			
			&:hover
				background mainColorTranslucent
				border-color mainColorHover
				color white !important
			
			&:active
				background mainColorHover
				border-color mainColorHover

			&.alert, &.alert:focus
				border-color alertColorTranslucent
				color alertColor

				&:hover
					background alertColorTranslucent
					border-color alertColor

				&:active
					background alertColorHover
					border-color alertColorHover


.no-border
	border 0

.no-border-bottom
	border-bottom 0

.no-border-left
	border-left 0

.no-border-right
	border-right 0

[class^="icon-"], [class*=" icon-"]
	&.big-icon
		font-size 1.75em
	
		&.icon-cancel
			font-size 1.4em

	&.huge-icon
		font-size 3rem


.bottom, .bottom-0
	bottom 0

.color-alert 
	color alertColor
.color-background 
	color backgroundColor
.color-bodyFont 
	color bodyFontColor
.color-darkGrey 
	color darkGreyColor
.color-grey 
	color greyColor
.color-header-font 
	color headerFontColor
.color-main 
	color mainColor
.color-secondary 
	color secondaryColor
.color-success 
	color successColor
.color-white 
	color whiteColor

.ease-in
	transition all ease-in .2s

.floating-action-button
	background mainColor
	bottom 5rem
	bottom-shadow(2,2,0.35)
	border-radius 100%
	color white
	font-size 1.5rem
	height 3.5rem
	text-align center
	padding-top .75rem
	position fixed
	right 1.5rem
	transition all ease-in .25s
	width 3.5rem
	z-index 99
	&:hover
		background mainColorHover
		bottom-shadow(3,3,0.35)
		color white
		
	&:focus, &:active
		bottom-shadow(1,1,0.5)
		color white
		

	[class^="icon-"], [class*=" icon-"]
		font-weight lighter

.full-height
	height 100%

.full-width
	width 100%

iframe
	-webkit-overflow-scrolling touch
	overflow hidden
	

.left, left-0
	left 0


.margin-top
	margin-top 1rem

.no-wrap
	white-space nowrap

.overflow-hidden
	overflow hidden

.overflow-x-scroll
    overflow-x auto
    -webkit-overflow-scrolling touch

.overflow-y-scroll
    overflow-y auto
    -webkit-overflow-scrolling touch


.no-padding
	padding 0

.padding
	padding 1rem

.padding-05
	padding .5rem

.padding-bottom
	padding-bottom 1rem

.padding-bottom-2
	padding-bottom 2rem

.padding-top
	padding-top 1rem

.padding-top-2
	padding-top 2rem

.relative
	position relative

.text-normal
	font-size 1rem 
	
a.text-normal.padding
	font-size 1rem !important
	padding 0.75rem 1rem !important

.text-shadow
	text-shadow(2,1,0.5)

.top, top-0
	top 0



/* MEDIUM UP */
@media screen and (min-width: 40rem)
	.floating-action-button
		bottom 2rem
		right 2rem



/* LARGE UP */
@media screen and (min-width: 64.063rem)
	.floating-action-button
		bottom initial
		top 3.25rem
		font-size 1.25rem
		height 3rem
		padding-top .75rem
		position absolute
		right -1.5rem
		width 3rem








